RewriteEngine On

# Redirect all requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]

# Optional: Prevent access to sensitive files
<FilesMatch "\.(env|json|lock|md|sql|txt)$">
    Order allow,deny
    Deny from all
</FilesMatch>